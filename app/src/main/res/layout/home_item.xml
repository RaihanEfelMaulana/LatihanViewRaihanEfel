<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/homeImage"
        android:scaleType="fitXY"
        android:src="@drawable/rumah1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/luasBangunan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Luas Bangunan"
        android:textColor="#4CAF50"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/luasTanah"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/luasBangunan"
        android:text="Luas Tanah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/kamarTidur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/luasTanah"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Kamar Tidur"
        android:textColor="#FD0606"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/kamarMandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kamarTidur"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Kamar Mandi"
        android:textColor="#FD0606"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kamarMandi"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Alamat"
        android:textColor="#3F51B5"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kamarMandi"
        android:layout_marginStart="130dp"
        android:layout_marginTop="8dp"
        android:text="Harga"
        android:layout_alignParentRight="true"
        android:textColor="#3F51B5"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>